generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(cuid())
   userId String 
    name String
    price Decimal @db.Decimal(12,2) 
    quantity Int @default(0)
    lowStockAt Int?
    createdAt DateTime @default(now())

    @@index([userId, name])
     @@index([createdAt])

}
